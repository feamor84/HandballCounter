<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <!--Containers-->
    <style name="mainContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="horizontalContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="teamContainer">
        <item name="android:layout_width">@dimen/layout_width_for_equal_containers</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/container_padding_big</item>
    </style>

    <style name="buttonContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--TextViews-->
    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView.heading">
        <item name="android:textSize">@dimen/penalty_heading</item>
        <item name="android:textColor">@color/colorTextViewHeading</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">@dimen/textview_space_small</item>
    </style>

    <style name="textView.content">
        <item name="android:textSize">@dimen/team_content</item>
        <item name="android:textColor">@color/colorTextViewContent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/textview_space_big</item>
    </style>

    <style name="textView.card">
        <item name="android:padding">@dimen/textview_space_big</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:textColor">@color/cardText</item>
    </style>

    <style name="textView.card.red">
        <item name="android:background">@drawable/red_card</item>
        <item name="android:layout_marginLeft">@dimen/textview_space_small</item>
    </style>

    <style name="textView.card.yellow">
        <item name="android:background">@drawable/yellow_card</item>
        <item name="android:layout_marginRight">@dimen/textview_space_small</item>
    </style>

    <style name="textView.penaltyNumber">
        <item name="android:textSize">@dimen/penalty_content</item>
        <item name="android:textColor">@color/colorTextViewContent</item>
        <item name="android:paddingBottom">@dimen/textview_space_big</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--Buttons-->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_small</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="button.card">
        <item name="android:layout_width">@dimen/layout_width_for_equal_containers</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/cardText</item>
    </style>

    <style name="button.card.yellow">
        <item name="android:backgroundTint">@color/yellowCard</item>
        <item name="android:layout_marginRight">@dimen/button_margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_small</item>
    </style>

    <style name="button.card.red">
        <item name="android:backgroundTint">@color/redCard</item>
        <item name="android:layout_marginRight">@dimen/button_margin_small</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_medium</item>
    </style>

    <style name="button.reset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_medium</item>
    </style>

    <!--Vertical divider-->
    <style name="verticalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/vertical_divider_width</item>
        <item name="android:background">@color/verticalDivider</item>
    </style>

</resources>
